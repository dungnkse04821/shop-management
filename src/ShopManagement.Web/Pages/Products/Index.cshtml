@page "/products/index"
@model ShopManagement.Web.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
@section Styles {
    <link rel="stylesheet" href="~/Pages/Css/Index.css" />
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:250px; object-fit:cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>

                    <!-- Giá chung (nếu có) -->
                    <p class="fw-bold text-danger">@product.PriceSell.ToString("N0") ₫</p>

                    <!-- Thông tin variants -->
                    @if (@product.Variants != null && product.Variants.Any())
                    {
                        <ul class="list-unstyled small text-muted">
                            @foreach (var variant in product.Variants)
                            {
                                <li>
                                    <span class="fw-semibold">@variant.VariantName</span>
                                    @* - Giá: @variant.Price.ToString("N0") ₫ *@
                                    - SL: @variant.Stock
                                </li>
                            }
                        </ul>
                    }

                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-page="./Detail" asp-route-id="@product.Id"
                           class="btn btn-primary flex-fill me-2">Xem chi tiết</a>

                        @if (Model.CanEdit)
                        {
                            <a asp-page="./Edit" asp-route-id="@product.Id"
                               class="btn btn-warning flex-fill">Edit</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

